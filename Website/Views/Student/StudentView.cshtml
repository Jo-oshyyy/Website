@{
    ViewBag.Title = "Students";
}

<link href="~/Content/StudentStyles.css" rel="stylesheet" />

<div class="student-container">
    <h2>Students</h2>

    <div class="tab-container">
        <div class="tab-headers">
            <button class="tab-header active" data-tab="student-list">
                <span class="tab-icon">👥</span>
                Student List
            </button>
            <button class="tab-header" data-tab="activity-logs">
                <span class="tab-icon">📋</span>
                Activity Logs
            </button>
        </div>

        <div class="tab-content-container">
            <!-- STUDENT LIST TAB -->
            <div class="tab-content active" id="student-list">
                <div class="content-header">
                    <h3>Student List</h3>
                    <p>View and manage all students</p>
                </div>

                <!-- Search and Filters -->
                <div class="table-controls">
                    <input type="text" id="studentSearch" placeholder="Search students, schools, or barangay..." class="search-input">
                    <select id="lastActiveFilter" class="filter-select">
                        <option value="">All Dates</option>
                        <option value="today">Today</option>
                        <option value="yesterday">Yesterday</option>
                        <!-- Dates will be populated by JavaScript -->
                    </select>
                </div>

                <!-- Student Table -->
                <div class="table-wrapper">
                    <table id="studentTable" class="data-table">
                        <thead>
                            <tr>
                                <th data-sort="studentName">Student Name <span class="sort-icon">⬍</span></th>
                                <th data-sort="gender">Gender <span class="sort-icon">⬍</span></th>
                                <th data-sort="schoolName">School Name <span class="sort-icon">⬍</span></th>
                                <th data-sort="barangay">Barangay <span class="sort-icon">⬍</span></th>
                                <th data-sort="lastActive">Last Active <span class="sort-icon">⬍</span></th>
                            </tr>
                        </thead>
                        <tbody id="studentTableBody">
                            <!-- Populated by JavaScript -->
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="pagination-container">
                    <div class="pagination-info">
                        Showing <span id="studentShowingStart">0</span> to <span id="studentShowingEnd">0</span> of <span id="studentTotal">0</span> students
                    </div>
                    <div class="pagination-controls" id="studentPagination">
                        <!-- Pagination buttons populated by JavaScript -->
                    </div>
                </div>
            </div>

            <!-- ACTIVITY LOGS TAB -->
            <div class="tab-content" id="activity-logs">
                <div class="content-header">
                    <h3>Activity Logs</h3>
                    <p>Track student activities and sessions</p>
                </div>

                <!-- Search and Filters -->
                <div class="table-controls">
                    <input type="text" id="activitySearch" placeholder="Search log ID, student, session type, or device..." class="search-input">
                    <select id="timeOfActionFilter" class="filter-select">
                        <option value="">All Dates</option>
                        <option value="today">Today</option>
                        <option value="yesterday">Yesterday</option>
                        <!-- Dates will be populated by JavaScript -->
                    </select>
                </div>

                <!-- Activity Logs Table -->
                <div class="table-wrapper">
                    <table id="activityTable" class="data-table">
                        <thead>
                            <tr>
                                <th data-sort="logId">Log ID <span class="sort-icon">⬍</span></th>
                                <th data-sort="studentId">Student ID <span class="sort-icon">⬍</span></th>
                                <th data-sort="studentName">Student Name <span class="sort-icon">⬍</span></th>
                                <th data-sort="sessionType">Session Type <span class="sort-icon">⬍</span></th>
                                <th data-sort="sessionTag">Session Tag <span class="sort-icon">⬍</span></th>
                                <th data-sort="deviceInfo">Device Info <span class="sort-icon">⬍</span></th>
                                <th data-sort="timeOfAction">Time of Action <span class="sort-icon">⬍</span></th>
                            </tr>
                        </thead>
                        <tbody id="activityTableBody">
                            <!-- Populated by JavaScript -->
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="pagination-container">
                    <div class="pagination-info">
                        Showing <span id="activityShowingStart">0</span> to <span id="activityShowingEnd">0</span> of <span id="activityTotal">0</span> logs
                    </div>
                    <div class="pagination-controls" id="activityPagination">
                        <!-- Pagination buttons populated by JavaScript -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/StudentScript.js"></script>