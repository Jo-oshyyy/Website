@{
    ViewBag.Title = "Students";
}

<link href="~/Content/StudentStyles.css" rel="stylesheet" />

<div class="student-container">
    <h2>Students</h2>

    <div class="tab-container">
        <div class="tab-headers">
            <button class="tab-header active" data-tab="profile">
                <span class="tab-icon">👤</span>
                Profile
            </button>
            <button class="tab-header" data-tab="schools">
                <span class="tab-icon">🏫</span>
                Schools
            </button>
            <button class="tab-header" data-tab="student-logs">
                <span class="tab-icon">📝</span>
                Student Logs
            </button>
        </div>

        <div class="tab-content-container">
            <div class="tab-content active" id="profile">
                <div class="content-header">
                    <h3>Student Profile</h3>
                    <p>Student information and academic details</p>
                </div>
                <div class="content-body">
                    <div class="stats-grid">
                        <div class="stat-card">
                            <h4>Total Students</h4>
                            <p class="stat-value">3,456</p>
                            <span class="stat-change positive">+89</span>
                        </div>
                        <div class="stat-card">
                            <h4>Active Students</h4>
                            <p class="stat-value">3,234</p>
                            <span class="stat-label">Currently enrolled</span>
                        </div>
                        <div class="stat-card">
                            <h4>New This Month</h4>
                            <p class="stat-value">127</p>
                            <span class="stat-change positive">+15%</span>
                        </div>
                        <div class="stat-card">
                            <h4>Graduated</h4>
                            <p class="stat-value">892</p>
                            <span class="stat-label">All time</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-content" id="schools">
                <div class="content-header">
                    <h3>Schools Management</h3>
                    <p>Track schools and institutional partnerships</p>
                </div>
                <div class="content-body">
                    <div class="stats-grid">
                        <div class="stat-card">
                            <h4>Partner Schools</h4>
                            <p class="stat-value">48</p>
                            <span class="stat-change positive">+3</span>
                        </div>
                        <div class="stat-card">
                            <h4>Active Programs</h4>
                            <p class="stat-value">156</p>
                            <span class="stat-label">Across all schools</span>
                        </div>
                        <div class="stat-card">
                            <h4>Total Enrollment</h4>
                            <p class="stat-value">3,234</p>
                            <span class="stat-label">Students enrolled</span>
                        </div>
                        <div class="stat-card">
                            <h4>Avg. Class Size</h4>
                            <p class="stat-value">28</p>
                            <span class="stat-label">Students per class</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-content" id="student-logs">
                <div class="content-header">
                    <h3>Student Activity Logs</h3>
                    <p>Track student activities and engagement</p>
                </div>
                <div class="content-body">
                    <div class="stats-grid">
                        <div class="stat-card">
                            <h4>Today's Logins</h4>
                            <p class="stat-value">1,847</p>
                            <span class="stat-change positive">+5.2%</span>
                        </div>
                        <div class="stat-card">
                            <h4>Active Sessions</h4>
                            <p class="stat-value">423</p>
                            <span class="stat-label">Currently online</span>
                        </div>
                        <div class="stat-card">
                            <h4>Completed Tasks</h4>
                            <p class="stat-value">2,341</p>
                            <span class="stat-change positive">+12.8%</span>
                        </div>
                        <div class="stat-card">
                            <h4>Avg. Study Time</h4>
                            <p class="stat-value">2.5h</p>
                            <span class="stat-label">Per student/day</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/StudentScript.js"></script>