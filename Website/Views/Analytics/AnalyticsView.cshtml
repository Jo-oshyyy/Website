@{ ViewBag.Title = "Analytics"; }

<link href="~/Content/AnalyticsStyles.css" rel="stylesheet" />

<div class="analytics-container">
    <h2>Analytics</h2>

    <div class="tab-container">
        <div class="tab-headers">
            <button class="tab-header active" data-tab="demographics">
                <span class="tab-icon">👥</span>
                Demographics
            </button>
            <button class="tab-header" data-tab="engagement">
                <span class="tab-icon">📊</span>
                Engagement
            </button>
            <button class="tab-header" data-tab="performance">
                <span class="tab-icon">⚡</span>
                Performance
            </button>
        </div>

        <div class="tab-content-container">
            <div class="tab-content active" id="demographics">
                <div class="content-header">
                    <h3>Demographics Overview</h3>
                    <p>User demographic information and statistics</p>
                </div>
                <div class="content-body">
                    <div class="stats-grid">
                        <div class="stat-card">
                            <h4>Total Users</h4>
                            <p class="stat-value">12,543</p>
                            <span class="stat-change positive">+12.5%</span>
                        </div>
                        <div class="stat-card">
                            <h4>Age Range</h4>
                            <p class="stat-value">18-45</p>
                            <span class="stat-label">Primary demographic</span>
                        </div>
                        <div class="stat-card">
                            <h4>Gender Split</h4>
                            <p class="stat-value">52% / 48%</p>
                            <span class="stat-label">Male / Female</span>
                        </div>
                        <div class="stat-card">
                            <h4>Geographic Reach</h4>
                            <p class="stat-value">45</p>
                            <span class="stat-label">Countries</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-content" id="engagement">
                <div class="content-header">
                    <h3>Engagement Metrics</h3>
                    <p>Track user interaction and engagement levels</p>
                </div>
                <div class="content-body">
                    <div class="stats-grid">
                        <div class="stat-card">
                            <h4>Daily Active Users</h4>
                            <p class="stat-value">8,234</p>
                            <span class="stat-change positive">+8.3%</span>
                        </div>
                        <div class="stat-card">
                            <h4>Avg. Session Duration</h4>
                            <p class="stat-value">12m 34s</p>
                            <span class="stat-change positive">+2.1%</span>
                        </div>
                        <div class="stat-card">
                            <h4>Bounce Rate</h4>
                            <p class="stat-value">32.4%</p>
                            <span class="stat-change negative">-5.2%</span>
                        </div>
                        <div class="stat-card">
                            <h4>Pages per Session</h4>
                            <p class="stat-value">4.7</p>
                            <span class="stat-change positive">+1.8%</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-content" id="performance">
                <div class="content-header">
                    <h3>Performance Indicators</h3>
                    <p>System performance and efficiency metrics</p>
                </div>
                <div class="content-body">
                    <div class="stats-grid">
                        <div class="stat-card">
                            <h4>Page Load Time</h4>
                            <p class="stat-value">1.2s</p>
                            <span class="stat-change positive">-0.3s</span>
                        </div>
                        <div class="stat-card">
                            <h4>Server Response</h4>
                            <p class="stat-value">245ms</p>
                            <span class="stat-change positive">-15ms</span>
                        </div>
                        <div class="stat-card">
                            <h4>Error Rate</h4>
                            <p class="stat-value">0.12%</p>
                            <span class="stat-change positive">-0.05%</span>
                        </div>
                        <div class="stat-card">
                            <h4>Uptime</h4>
                            <p class="stat-value">99.98%</p>
                            <span class="stat-label">Last 30 days</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/AnalyticsScript.js"></script>